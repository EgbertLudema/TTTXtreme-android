<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when item is checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Shadow square (3dp lower) -->
            <item
                android:top="4dp"
                android:bottom="0dp"
                android:gravity="center">
                <shape>
                    <solid android:color="@color/dark_blue_shade"/>
                    <corners android:radius="10dp"/>
                    <size
                        android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>

            <!-- Main square with centered icon -->
            <item android:gravity="center">
                <shape>
                    <solid android:color="@color/dark_blue"/>
                    <corners android:radius="10dp"/>
                    <size
                        android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state when item is unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <!-- Shadow square (3dp lower) -->
            <item
                android:top="4dp"
                android:bottom="0dp"
                android:gravity="center">
                <shape>
                    <solid android:color="@color/dark_blue_shade"/>
                    <corners android:radius="10dp"/>
                    <size
                        android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>

            <!-- Main square with centered icon -->
            <item android:gravity="center">
                <shape>
                    <solid android:color="@color/dark_blue"/>
                    <corners android:radius="10dp"/>
                    <size
                        android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow square (3dp lower) -->
    <item
        android:top="4dp"
        android:bottom="0dp"
        android:gravity="center">
        <shape>
            <solid android:color="@color/dark_blue_shade"/> <!-- Default shadow color -->
            <corners android:radius="10dp"/>
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>

    <!-- Main square with centered icon -->
    <item android:gravity="center">
        <shape>
            <solid android:color="@color/dark_blue"/> <!-- Default background color -->
            <corners android:radius="10dp"/>
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>
</layer-list>